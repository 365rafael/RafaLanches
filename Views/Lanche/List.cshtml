@model LancheListViewModel

<div><h2>@Model.CategoriaAtual (@ViewData["TotalLanches"])</h2></div>

<div class="container">
<div class="row">

@foreach (var item in Model.Lanches)
{

    <div class="col-sm-4 col-md-4 col-lg-4">
            <p><img src="@item.ImagemUrl" class="img-fluid"/></p>
            <h3> Preço: @item.Preco.ToString("c")</h3>
            <h4>@item.Name</h4>
            <p>@item.DescricaoCurta</p>
    </div>


}

</div>
</div>
